<%- layout("/layout/boilerplate") %>
<style>
.product-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}
.product-card {
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 350px;
    text-align: center;
}
.product-card img {
    width: 100%;
    height: auto;
}
.product-info {
    padding: 15px;
}
.tags {
    background: #ddd;
    padding: 5px;
    border-radius: 5px;
    font-size: 12px;
}
h2 {
    font-size: 18px;
    margin: 10px 0;
}
p {
    font-size: 14px;
    color: gray;
}
.rating {
    font-size: 14px;
    margin: 5px 0;
}
.price {
    font-size: 20px;
    font-weight: bold;
    margin: 5px 0;
}
.add-btn {
    background: #ff9900;
    border: none;
    color: white;
    padding: 10px;
    cursor: pointer;
    border-radius: 5px;
}
.add-btn:hover {
    background: #cc7a00;
}
</style>

